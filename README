REPOSITORY
  .bash - Configuration files for bash

INSTALLATION
  git clone git://github.com/shalomb/.bash.git ~/.bash
  cd ~/.bash
  sudo dpkg --set-selections < bash.dpkg
  sudo aptitude install

  # Pay attention to files attempted to be overwritten below
  for i in ~/.bash/@(bash|inputrc|profile)*; do
    (cd ~ && ln -sv "${i}" ."${i##*/}");
  done

