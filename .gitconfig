[user]
  name   = Shalom Bhooshi
  email  = s.bhooshi@gmail.com

[color]
  branch       = auto
  diff         = auto
  grep         = auto
  interactive  = auto
  showbranch   = auto
  status       = auto
  ui           = auto

[color "status"]
  header    = 246 bold   # white
  added     = 42  bold   # green
  changed   = 160 bold   # red
  untracked = 75  bold   # blue

[color "branch"]
  current   = 42  bold   # green
  local     = 75  dim    # blue
  remote    = 166 dim    # green
  upstream  = 160 dim    # red

[color "diff"]
  meta      = 248 dim    # white
  frag      = 75  bold   # blue
  old       = 160 dim    # red
  new       = 42  bold   # green

[core]
  editor = vim

[alias]
  ammend  = commit --amend -C HEAD
  br      = branch
  ci      = commit
  co      = checkout
  dc      = diff --cached
  df      = diff
  ec      = config -e
  ign     = ls-files -o -i --exclude-standard
  k       = !gitk
  lg      = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lgp     = log -p
  lol     = log --graph --decorate --pretty=oneline --abbrev-commit
  lola    = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls      = ls-files
  pom     = push origin master
  pum     = pull origin master
  s       = status --porcelain
  st      = status --short
  tree    = log --graph --oneline --decorate
  vimdiff = difftool -y -t vimdiff

[github]
  user  = shalomb
  token = 822bb43c9861d41e965eb83b72d4736d

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[push]
  default = simple

[branch]
  autosetupmerge  = always
  autosetuprebase = always

[merge]
  tool = vimdiff
  conflictstyle = diff3

[mergetool]
  prompt = false

[tag]
  sort = version:refname

