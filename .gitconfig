[user]
  name   = Shalom Bhooshi
  email  = s.bhooshi@gmail.com

[color]
  branch       = auto
  diff         = auto
  grep         = auto
  interactive  = auto
  showbranch   = auto
  status       = auto
  ui           = auto

[core]
  editor = vim

[alias]
  ammend  = commit --amend -C HEAD
  br      = branch
  ci      = commit
  co      = checkout
  dc      = diff --cached
  df      = diff
  ec      = config -e
  ign     = ls-files -o -i --exclude-standard
  k       = !gitk
  lg      = log -p
  lgp     = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lol     = log --graph --decorate --pretty=oneline --abbrev-commit
  lola    = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls      = ls-files
  pom     = push origin master
  pum     = pull origin master
  s       = status --porcelain
  st      = status
  tree    = log --graph --oneline --decorate
  vimdiff = difftool -y -t vimdiff

[github]
  user  = shalomb
  token = 822bb43c9861d41e965eb83b72d4736d

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[push]
  default = current

[branch]
  autosetupmerge  = always
  autosetuprebase = always

