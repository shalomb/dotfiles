[branch]
  autosetupmerge  = always
  autosetuprebase = always

[color]
  branch       = auto
  diff         = auto
  grep         = auto
  interactive  = auto
  showbranch   = auto
  status       = auto
  ui           = auto

[color "status"]
  header    = 246 bold   # white
  added     = 42  bold   # green
  changed   = 160 bold   # red
  untracked = 75  bold   # blue

[color "branch"]
  current   = 42  bold   # green
  local     = 75  dim    # blue
  remote    = 166 dim    # green
  upstream  = 160 dim    # red

[color "diff"]
  meta      = 248 dim    # white
  frag      = 75  bold   # blue
  old       = 160 dim    # red
  new       = 42  bold   # green

[commit]
  gpgsign = true

[core]
  editor = vi
  pager = less

[credential]
  helper = store --file ~/.config/git-credentials
  helper = cache --timeout 86400

[diff]
  ignoreSubmodules = dirty
  tool = vimdiff

[difftool]
  prompt = false

[fetch]
  prune = true

