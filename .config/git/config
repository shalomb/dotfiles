  token = 822bb43c9861d41e965eb83b72d4736d

[gpg]
  program = /usr/bin/gpg2

[help]
  autocorrect = prompt

[init]
  defaultBranch = main

[merge]
  autoStash = true
  conflictstyle = diff3
  tool = vimdiff

[mergetool]
  prompt = false

[pager]
  diff = true
  show = true

[pull]
  rebase = true

[push]
  default = simple
  autoSetupRemote = true

[rebase]
  autoStash = true

[tag]
  sort = version:refname

[user]
  name = Shalom Bhooshi
  email = s.bhooshi@gmail.com
