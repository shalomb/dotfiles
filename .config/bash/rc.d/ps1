#!/bin/bash

source ~/.config/bash/rc.d/colors

if [[ -z "$debian_chroot" && -r /etc/debian_chroot ]]; then
  debian_chroot="$(</etc/debian_chroot)"
fi

sumarker=
if [[ $EUID == 0 || $UID == 0 ]]; then
  sumarker='\$'
else
  sumarkers=(
