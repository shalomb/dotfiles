# color defines for zenburn styled i3
set $ac     #073642
set $be     #8faf9f
set $bg     #1c1c1c
set $fg     #9f9f9f
set $gn     #88b090
set $hi     #efef8f
set $ia     #8f8f8f
set $rd     #e89393
set $tx     #8f8f8f
set $yw     #ccdc90

# set some nice colors      border     background  text
client.focused              $ac        $ac         $tx
client.unfocused            $bg        $bg         $ia
client.focused_inactive     $bg        $bg         $ac
client.urgent               $rd        $rd         $tx

for_window [class="*"] border 1pixel
new_window pixel 1
for_window [class="(?i)firefox"] title_format "<span foreground='#BBBBBB'>%title</span>"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command i3status -c ~/.config/i3/status
  # status_command line_status

  separator_symbol   " "
  font pango:Bitstream Vera Sans Mono 8
  tray_padding 8
# tray_output primary

  bindsym button4   nop
  bindsym button5   nop

  colors {
    # Whole color settings
    background #000000
    statusline #ffffff
    separator  #666666

    # Type             border   background  font
    focused_workspace  #009fff  #005faa     #000000
    active_workspace   #333333  #5f676a     #ffffff
    inactive_workspace #001f2f  #000000     #009faa
    urgent_workspace   #aa0000  #990000     #ffffff
  }
}

exec_always --no-startup-id  ~/.bin/mark_last_window
exec --no-startup-id  i3-msg 'workspace 1; exec qterm;   workspace 1;'
exec --no-startup-id  i3-msg 'workspace 2; exec firefox; workspace 1;'

exec --no-startup-id  ~/.config/workspacerc
exec --no-startup-id  ~/.bin/wpset

