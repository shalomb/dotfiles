#----winctrl Mode--------------------------------------------------------------
Mod4 w w               :MacroCmd { ExecCommand osd_msg "WinCtrl Mode" } { KeyMode WinCtrlMode }

WinCtrlMode:  KP_Begin :ExecCommand winctrl Center
WinCtrlMode:  KP_Prior :ExecCommand winctrl TopRight
WinCtrlMode:  KP_Next  :ExecCommand winctrl BottomRight
WinCtrlMode:  KP_Home  :ExecCommand winctrl TopLeft
WinCtrlMode:  KP_End   :ExecCommand winctrl BottomLeft

WinCtrlMode:  KP_Up    :ExecCommand winctrl Top
WinCtrlMode:  KP_Right :ExecCommand winctrl Right
WinCtrlMode:  KP_Down  :ExecCommand winctrl Bottom
WinCtrlMode:  KP_Left  :ExecCommand winctrl Left

WinCtrlMode:  h        :MaximizeHorizontal
WinCtrlMode:  v        :MaximizeVertical
WinCtrlMode:  s        :Shade
WinCtrlMode:  i        :Iconify
WinCtrlMode:  p        :PrevWindow {groups}
WinCtrlMode:  n        :NextWindow {groups}
WinCtrlMode:  0        :GoToWindow -1 {static groups} (iconhidden=no)
WinCtrlMode:  1        :GoToWindow 1  {static groups} (iconhidden=no)
WinCtrlMode:  2        :GoToWindow 2  {static groups} (iconhidden=no)
WinCtrlMode:  3        :GoToWindow 3  {static groups} (iconhidden=no)
WinCtrlMode:  4        :GoToWindow 4  {static groups} (iconhidden=no)
WinCtrlMode:  5        :GoToWindow 5  {static groups} (iconhidden=no)
WinCtrlMode:  6        :GoToWindow 6  {static groups} (iconhidden=no)
WinCtrlMode:  7        :GoToWindow 7  {static groups} (iconhidden=no)
WinCtrlMode:  8        :GoToWindow 8  {static groups} (iconhidden=no)
WinCtrlMode:  9        :GoToWindow 9  {static groups} (iconhidden=no)


#----Window Move Mode----{{{---------------------------------------------------
Mod4 w m              :MacroCmd { ExecCommand osd_msg "Window Move Mode" } { KeyMode MoveMode }

MoveMode: Up          :MoveUp     5
MoveMode: Shift Up    :MoveUp     20
MoveMode: Left        :MoveLeft   5
MoveMode: Shift Left  :MoveLeft   20
MoveMode: Down        :MoveDown   5
MoveMode: Shift Down  :MoveDown   20
MoveMode: Right       :MoveRight  5
MoveMode: Shift Right :MoveRight  20

MoveMode: KP_Home     :MoveTo 0 0 TopLeft       # 7/Home
MoveMode: KP_Up       :MoveTo * * Top           # 8/Up
MoveMode: KP_Prior    :MoveTo 0 0 TopRight      # 9/PgUp
MoveMode: KP_Left     :MoveTo 0 * Left          # 4/Left
MoveMode: KP_Begin    :MoveTo 0 0 Center        # 5/Center
MoveMode: KP_Right    :MoveTo 0 * Right         # 6/Right
MoveMode: KP_End      :MoveTo 0 0 BottomLeft    # 1/End
MoveMode: KP_Down     :MoveTo * * Bottom        # 2/Down
MoveMode: KP_Next     :MoveTo 0 0 BottomRight   # 3/PgDn

MoveMode: x           :Maximize
MoveMode: r           :MacroCmd { ExecCommand osd_msg "Window Resize Mode" } { KeyMode ResizeMode }
#  }}}


#----Window Resize Mode----{{{-------------------------------------------------
Mod4 w r                        :MacroCmd { ExecCommand osd_msg "Window Resize Mode" } { KeyMode ResizeMode }

ResizeMode: KP_Home             :Resize -2 -2
ResizeMode: Shift KP_Home       :Resize -5 -5
ResizeMode: KP_Left             :Resize -2  0
ResizeMode: Shift KP_Left       :Resize -5  0
ResizeMode: KP_Up               :Resize  0 -2
ResizeMode: Shift KP_Up         :Resize  0 -5

ResizeMode: KP_Prior            :MacroCmd { MoveTo * * Top } { MaximizeVertical }
ResizeMode: KP_Begin            :MacroCmd { ResizeTo 800 600 } { Maximize }
ResizeMode: KP_End              :MacroCmd { MoveTo 0 * Left } { MaximizeHorizontal }

ResizeMode: KP_Right            :Resize 2 0 # growing
ResizeMode: Shift KP_Right      :Resize 5 0
ResizeMode: KP_Down             :Resize 0 2
ResizeMode: Shift KP_Down       :Resize 0 5
ResizeMode: KP_Next             :Resize 2 2
ResizeMode: Shift KP_Next       :Resize 5 5
# ResizeMode: KP_Next           :MacroCmd {Resize 1 1} {Move 10 10}

ResizeMode: Up                  :ResizeVertical   -3
ResizeMode: Right               :ResizeHorizontal  3
ResizeMode: Down                :ResizeVertical    3
ResizeMode: Left                :ResizeHorizontal -3
ResizeMode: Return              :ResizeTo          1024 768

ResizeMode: Shift Up            :MacroCmd {MoveUp    32} {ResizeVertical     2}
ResizeMode: Shift Down          :MacroCmd {MoveDown  32} {ResizeVertical    -2}
ResizeMode: Shift Left          :MacroCmd {MoveLeft  48} {ResizeHorizontal   6}
ResizeMode: Shift Right         :MacroCmd {MoveRight 48} {ResizeHorizontal  -6}
ResizeMode: Control Shift Left  :MacroCmd {MoveLeft  80} {ResizeHorizontal  10}
ResizeMode: Control Shift Right :MacroCmd {MoveRight 80} {ResizeHorizontal -10}
# }}}

#----Set Window Layer Mode----{{{----------------------------------------------
Mod4 w l          :MacroCmd { ExecCommand osd_msg "Set Window Layer Mode" } {KeyMode SetWindowLayer}

SetWindowLayer: t :SetLayer Top
SetWindowLayer: n :SetLayer Normal
SetWindowLayer: b :SetLayer Bottom
SetWindowLayer: d :SetLayer Desktop
SetWindowLayer: l :LowerLayer
SetWindowLayer: r :RaiseLayer
# }}}


#----Command Hotkeys----{{{----------------------------------------------------
Control Mod4 period  :ExecCommand ~/.bin/qterm skip_taskbar
Control Shift Escape :ExecCommand urxvtc -name htop -title htop -e htop -u $USER --sort-key CPU%

#Mod4 a              :Claimed by winctrl Mode
Mod4 b               :If { Some Matches (Navigator) } { NextWindow (Navigator) } { ExecCommand xdg-open 'http://www.google.co.uk/webhp?complete=1' }
Mod4 a               :ArrangeWindows
Mod4 d               :ToggleCmd { ShowDesktop } { Deiconify }
Mod4 f               :If { Some Matches (dolphin) } { NextWindow (dolphin) } { ExecCommand xdg-open ~/ }
Mod4 g               :ExecCommand xdg-open 'http://127.0.0.1:30127/?hl=en_GB&src=14&s=f6gdGknV4MTC5Tya_vD2PdzAcY0'
Mod4 l               :ExecCommand gnome-screensaver-command --activate && xset s activate && xset dpms force off
Mod4 r               :If { Some Matches (gmrun) } { NextWindow (gmrun) } { ExecCommand gmrun }
# Mod4 v             :Claimed by SpecialKeys/alsamixergui
# Mod4 w             :Claimed by Window Mode

Mod4 apostrophe      :ExecCommand ~/.bin/summon wfcmgr.Wfcmgr toggle_hidden
Mod4 End             :ExecCommand gnome-screensaver-command --activate && xset s activate && xset dpms force off
Mod4 Home            :ExecCommand xdg-open 'http://www.google.co.uk/webhp?complete=1'
Mod4 period          :If { Some Matches (qterm) } { ToggleCmd { NextWindow (qterm) } { ExecCommand ~/.bin/qterm hidden } }
Mod4 space           :ExecCommand gnome-do --mini --glassframe --quiet
# }}}


