#!/bin/bash

# NAME
#   wminmark - mark and summon windows.

# set -x
shopt -s extglob

# [[ ${-//[!i]/} ]] &&
#   exec > >(tee -a ~/.tmp/wmarks.log) 2>&1

if [[ ! -d ~/.tmp/winmarks ]]; then
  mkdir -p ~/.tmp/winmarks || \
    { echo "Error creating the winmarks directory, $!"; exit 2; };
fi

cd ~/.tmp/winmarks

action="${1:-"mark"}"
mark="${2:-"'"}"
duration="${osd_msg_duration:-"10"}"
curwin="$(printf "0x%08x" "$(xprop -root _NET_ACTIVE_WINDOW | grep -Eio "0x[[:xdigit:]]+")")";

if   [[ $action = @(mark|add) ]]; then
  touch "$curwin";
  ln -svf "$curwin" "$mark";

  duration="${osd_msg_duration:-"3"}"
  wmctrl -lx | \
    perl -lane '
        $F[0]=~/'"$curwin"'/ and 
          print join " ", 
            qw['"$mark"'], "\t",
            "$F[2]", "\t",
            q/"/, (join " ", @F[4..$#F]), q/"/
      ' | \
    tee "$curwin" | \
    osd_msg "$( < /dev/stdin )"

elif [[ $action = @(summon|call) ]]; then
  winid="$(readlink "$mark")";
  winid="${winid##*/}"

  if [[ -f $winid ]]; then
    if [[ $winid = $curwin ]]; then
      wmctrl -i -r "$winid" -b toggle,hidden
    else
      wmctrl -i -r "$winid" -b remove,hidden
      wmctrl -i -a "$winid"
    fi
  else
    exec "$0" "mark" "$mark"
  fi

elif [[ $action = @(ls|list) ]]; then
  set +v +x
  for link in ?; do
    target=$(readlink -f "$link")
    target="${target##*/}"
    [[ -f $target ]] || continue
    printf "%s %s %s\n" "$link" "$target" "$(< $link)" \
      | sed 's/\s\+/ /g' \
      | sed 's/"//g'     \
      | while read n w n c d; do 
          printf "%s %s %-20s %s\n" "$n" "$w" "$c" "$d"
        done
  done 

elif [[ $action = @(rm|remove) ]]; then
  set -x
    rm "$mark"
  set +x

elif [[ $action = @(reset|remark) ]]; then
  set -x
  rm "$mark"
  exec "$0" 'mark' "$mark"
  
fi
